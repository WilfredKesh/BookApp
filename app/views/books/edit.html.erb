<h2>Edit Form</h2>

<%= simple_form_for @book, :html => { :multipart => true }  do |f| %>
  <%= f.select :category_id, @categories %>
  <%= f.file_field :image %>
  <%= f.input :title, label: "Book title" %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.button :submit %>


<% end %>
